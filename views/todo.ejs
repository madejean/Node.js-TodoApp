<!DOCTYPE html>
<html>
  <head>
    <title>Todo list</title>
    <style>
      a {text-decoration: none; color: red;}
    </style>
  </head>
  <body>
    <h1>Todo List</h1>
    <ul>
      <% todolist.forEach(function(todo, index){ %>
        <li><%= todo %> <a href="/todo/delete/<%= index %>">x</a></li>
      <% }); %>
    </ul>
    <form action="/todo/add" method="post">
      <p>
        <label for="addTodo">What should I do?</label>
        <input type="text" name="addTodo" id="addTodo" autofocus />
        <input type="submit" />
      </p>
    </form>
  </body>
</html>
